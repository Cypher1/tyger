{
  "name": "tyger",
  "version": "1.0.0",
  "description": "A very flexible type system",
  "main": "test/test.ts",
  "scripts": {
    "test": "tsc && mocha -r source-map-support/register --color build/test/**/*.js",
    "watch": "npm-watch"
  },
  "watch": {
    "test": {
      "patterns": [
        "src",
        "test",
        "node_modules",
        "package.json",
        "tsconfig.json"
      ],
      "extensions": "js,jsx,ts,tsx,json",
      "quiet": true,
      "clearBuffer": true,
      "legacyWatch": true,
      "delay": 500,
      "runOnChangeOnly": false
    }
  },
  "keywords": [
    "types",
    "modelling",
    "structural",
    "nominal",
    "duck",
    "typing",
    "interfaces",
    "plugin",
    "solver"
  ],
  "author": "J Pratt",
  "license": "MIT",
  "type": "module",
  "devDependencies": {
    "chai": "^4.3.4",
    "mocha": "^8.3.2",
    "npm-watch": "^0.9.0",
    "source-map-support": "^0.5.19"
  },
  "dependencies": {
    "@types/chai": "^4.2.17",
    "@types/mocha": "^8.2.2"
  }
}
